@model IEnumerable<C500Hemis.Models.TbChuongTrinhDaoTao>

@{
    ViewData["Title"] = "DANH SÁCH CTĐT";
}
@section Heads{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.css" rel="stylesheet">
}
@section Styles {
    <style>
        .table {
            border-collapse: collapse;
            margin: 20px 0;
            font-size:0.9em;
            min-width: 400px;
            border-radius: 10px 10px 0 0;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
            width: 100%;
        }

                 /* Đặt kích thước cột theo phần trăm */
                th:nth-child(1), td:nth-child(1) { width: 15%; } /* Cột Tên CTĐT */
                th:nth-child(2), td:nth-child(2) { width: 15%; } /* Cột Ngành ĐT */
                th:nth-child(3), td:nth-child(3) { width: 14%; } /* Cột Trạng thái CTĐT */
                th:nth-child(4), td:nth-child(4) { width: 14%; } /* Cột Hình thức CTĐT */
                th:nth-child(5), td:nth-child(5) { width: 14%; } /* Cột Trình độ CTĐT */
                th:nth-child(6), td:nth-child(6) { width: 14%; } /* Cột Học chế CTĐT */
                th:nth-child(7), td:nth-child(7) { width: 14%; } /* Cột nút sửa, xóa */
        
        .table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
            border-bottom: 2px solid #dddddd;
        }

        .table th, .table td {
            padding: 12px 15px;
        }

        .table tbody tr {
            border-bottom: 2px solid #dddddd;
        }

        .table tbody tr:nth-of-type(even){
            background-color: #f3f3f3;
        }

        .table tbody tr:last-of-type {
            border-bottom: 5px solid #009879;
        }

        .table tbody tr:hover{
            background-color: #62cdb7;
            color: #ffffff;
            font-style: italic;
        }

        .button_a_edit, .button_a_del {
            border-style: solid;
            border-width: 0.5px;
            font-size: 0.9em;
            display: inline-block;
            padding: 4px 8px;
            text-decoration: none;
            color: black;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            transition: transform 0.3s ease, background-color 0.3s ease; /* Hiệu ứng chuyển màu khi di chuột */
            margin: 2px; /* Khoảng cách giữa các nút */
        }

            /* Khi di chuột vào nút "SỬA" */
            .button_a_edit:hover {
                background-color: #007bff; /*màu xanh dương*/
                color: white;
            }

            /* Khi di chuột vào nút "XÓA" */
            .button_a_del:hover {
                background-color: #dc3545; /* Màu đỏ */
                color: white;
            }

            /* Đặt kiểu bố cục cho khối chứa các nút */
            .edit_del {
                width: 100%;
                display: flex;
                justify-content: center; /* Canh giữa các nút trong div */
                align-items: center;
            }
    </style>
    
}


<h1 style="text-align: center">DANH SÁCH CÁC CHƯƠNG TRÌNH ĐÀO TẠO</h1>
  


<table class="table" id="view_table">
    <thead>
        <tr>

            <!-- Cột 1: Tên chương trình đào tạo -->
            <th>
                TÊN CTĐT
            </th>
                

            <!-- Cột 2: Ngành đào tạo -->
            <th>
                MÃ NGÀNH
            </th>


            <!-- Cột 3: Trạng thái chương trình đào tạo -->
            <th>
                TRẠNG THÁI
            </th>


            <!-- Cột 4: Loại chương trình đào tạo -->
            <th>
                HÌNH THỨC
            </th>


            <!-- Cột 5: Trình độ Chương trình đào tạo -->
            <th>
                TRÌNH ĐỘ
            </th>


            <!-- Cột 6: Học chế CTĐT -->
            <th>
                HỌC CHẾ
            </th>
            

            <!-- Cột 7: Các nút sửa, xóa -->
            <th></th>
        </tr>
    </thead>
    <tbody>
      
        @foreach (var item in Model)
        {

            <tr cursor: pointer;"
                    onclick="window.location.href='@Url.Action("Details", new { id = item.IdChuongTrinhDaoTao})'">
               
                <!-- Cột 1: Tên chương trình đào tạo -->
                <td>
                    @Html.DisplayFor(modelItem => item.TenChuongTrinh) <br />
                    @Html.DisplayFor(modelItem => item.TenChuongTrinhBangTiengAnh)
                </td>
                

                <!-- Cột 2: Ngành đào tạo -->
                <td>               
                    @Html.DisplayFor(modelItem => item.IdNganhDaoTaoNavigation.NganhDaoTao) <br />
                    (@Html.DisplayFor(modelItem => item.IdNganhDaoTao))
                </td>


                <!-- Cột 3: Trạng thái chương trình đào tạo -->
                <td>
                    @Html.DisplayFor(modelItem => item.IdTrangThaiCuaChuongTrinhNavigation.TrangThaiChuongTrinhDaoTao)
                </td>


                <!-- Cột 4: Loại chương trình đào tạo -->
                <td>
                    @Html.DisplayFor(modelItem => item.IdLoaiChuongTrinhDaoTaoNavigation.LoaiChuongTrinhDaoTao)
                </td>


                <!-- Cột 5: Trình độ Chương trình đào tạo -->
                <td>
                    @Html.DisplayFor(modelItem => item.IdTrinhDoDaoTaoNavigation.TrinhDoDaoTao)
                </td>


                <!-- Cột 6: Học chế CTĐT -->
                <td>
                    @Html.DisplayFor(modelItem => item.IdHocCheDaoTaoNavigation.HocCheDaoTao)
                </td>


                <!-- Cột 7: Các nút sửa, xóa -->
                <td>
                    <div class="edit_del"> 
                        <a class="button_a_edit" asp-action="Edit" asp-route-id="@item.IdChuongTrinhDaoTao"><i class="fa fa-pencil"> SỬA </i></a>
                        <a class="button_a_del" asp-action="Delete" asp-route-id="@item.IdChuongTrinhDaoTao"><i class="fa fa-trash"> XÓA </i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/dt/jszip-3.10.1/dt-2.1.8/b-3.1.2/b-colvis-3.1.2/b-html5-3.1.2/b-print-3.1.2/r-3.0.3/datatables.min.js"></script>
    <script>
        //Datatable trong datatable.net. Tìm hiểu thêm thông tin: https://datatables.net/manual/
        var table = new DataTable("#view_table", {
            responsive: {
                details: false
            },
            language: {
                //Điều chỉnh phần hiển thị label của thanh tìm kiếm - Xem thêm thông tin: https://datatables.net/reference/option/language.search
                search: "Tìm kiếm",
                //Điều chỉnh phần hiển thị thông tin của table - Xem thêm thông tin: https://datatables.net/reference/option/language.info
                info: "Tổng cộng có: _TOTAL_ Chương trình đào tạo",
            },
            createdRow: (row, data, index) => {
            },
            layout: {//Layout: https://datatables.net/examples/layout/index.html
                topStart: {
                    buttons: [//extension buttons: https://datatables.net/extensions/buttons/config
                        {
                            className: 'btn btn-primary', //Thêm class cho button
                            text: 'THÊM CHƯƠNG TRÌNH ĐÀO TẠO',
                            action: function (e, dt, node, config) {//Hành động của button
                                window.location.href = '@Url.Action("Create")';
                            }
                        }
                    ]
                }
            }
        });
        //HTMLDOM Element: https://developer.mozilla.org/en-US/docs/Web/API/Element
        //Datatables API: https://datatables.net/reference/api/table().header()
        var row = table.table().header().lastElementChild;
        row.lastElementChild.remove();
        row.appendChild(document.createElement('th'));
        console.log(row.lastElementChild);
    </script>
}
